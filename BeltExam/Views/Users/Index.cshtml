<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>C# Belt Exam Login/Registration Page</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.0.min.js"></script>
        <style>
            #wrapper {
                padding: 10%;
            }
            button {
                display: inline;
            }
            img {
                width: 20%;
            }
            td {
                padding-top: 4%;
            }
        </style>
    </head>
    <body>
        <div id="wrapper" class="ui container">
            
            <div class="column">
                <div class="ui inverted segment black">
                    <h1>Welcome to the C# Belt Exam Project Login/Registration Page!</h1>
                    <h2 style="color: red;">@ViewBag.error2</h2>
                    <div>
                        @{
                            foreach(var error in ViewBag.errors)
                            {
                                //If there are any errors for a field...
                                if(@error.Errors.Count > 0)
                                {
                                    // We show the first error for that field
                                    <h2 style="color: red;">@error.Errors[0].ErrorMessage</h2>
                                }
                            }
                        }
                    </div>
                    <!--Registration-->
                    <form action="register" method="Post">
                        <table>
                            <tr>
                                <td><label for="fname">Full Name: </label></td>
                                <td><input id="fname" style="color: darkblue;" type="text" name="name"></td>
                            </tr>
                            <tr>
                                <td><label for="email">Email: </label></td>
                                <td><input id="email" style="color: darkblue;" type="email" name="email" value=""></td>
                            </tr>
                            <tr>
                                <td><label for="pw">Password: </label></td>
                                <td><input id="pw" style="color: darkblue;" type="password" name="password" value="password"></td>
                            </tr>
                            <tr>
                                <td><label for="pwc">Confirm Password: </label></td>
                                <td><input id="pwc" style="color: darkblue;" type="password" name="password_confirm" value="password"></td>
                            </tr>
                            <tr>
                                <td><label for="pwc">Description: </label></td>
                                <td><textarea id="pwc" style="color: darkblue;" name="description"></textarea></td>
                            </tr>
                            <tr>
                                <td><input class="ui inverted green button" type="submit" name="addquote" value="Register"></td>
                            </tr>
                        </table>
                    <hr>
                    <!--Login-->  
                    <h2 style="color: red;">@ViewBag.error</h2>                      
                    </form>
                    <form action="login" method="Post">
                        <table>
                            <tr>
                                <td><label for="email">Email: </label></td>
                                <td><input id="email" style="color: blue;" type="email" name="email" value=""></td>
                            </tr>
                            <tr>
                                <td><label for="pw">Password: </label></td>
                                <td><input id="pw" style="color: blue;" type="password" name="password" value="password"></td>
                            </tr>
                            <tr>
                                <td><input class="ui inverted blue button" type="submit" name="addquote" value="Login"></td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </body> 
</html>