@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>C# Belt Exam Dash</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.0.min.js"></script>
        <style>
            #wrapper {
                padding: 10%;
            }
            button {
                display: inline;
            }
            img {
                width: 20%;
            }
            td {
                padding-top: 4%;
            }
        </style>
    </head>
    <body>
        <div id="wrapper" class="ui container">
            <div class="ui inverted segment black">
                <h3><a href="http://localhost:5000/dash">My Profile</a> | <a href="http://localhost:5000/allusers">All Users</a> | <a href="http://localhost:5000/logout">Logout</a></h3>
                <hr>
                <h1>User Profile:</h1>
                <hr>
                <h2>@ViewBag.user["name"]</h2>
                <h5>@ViewBag.user["description"]</h5>
            </div>
        </div>
    </body> 
</html>