@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Bank Activity</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.0.min.js"></script>
        <style>
            #wrapper {
                padding: 10%;
            }
            button {
                display: inline;
            }
            img {
                width: 20%;
            }              
        </style>
    </head>
    <body>
        <div id="wrapper" class="ui container">
            <div class="ui inverted segment black">
                <div id="header">
                <h3><a href="http://localhost:5000/">Dashboard</a> | <a href="http://localhost:5000/product">Products</a> | <a href="http://localhost:5000/order">Orders</a> | <a href="">Customers</a></h3>
                <hr>
                </div>
                <!--Title-->
                    <h3 id="title">Add a new customer</h3>
                <!--Customer and order select-->
                    <!--insert logic to cycle through the customers-->
                    <div id="customer">
                        <form action="add" method="Post">
                            <!--Customer-->
                            <h3 class="ui alert">@ViewBag.error</h3>
                            <label for="cust">Customer Name:</label>
                            <input style="color: darkblue;" id="cust" type="text" name="Name">
                            <!--Add Button-->
                            <input class="ui inveted button green" type="submit" name="add" value="Add">
                        </form>
                    </div>
                    <hr>
                <!--Search-->
                <div id="search">
                    <form action="search" method="Post">
                    <input style="color: darkblue;"name="search" type="text" placeholder="Search...">
                    <input class="ui iverted button blue" type="submit" value="Search">
                    </form>
                </div>
                <hr>
                <!--Customers-->
                <div id="customerlist">
                    <table class="ui striped table ">
                        <thead>
                        <tr>
                            <td>Customer Name</td>
                            <td>Created Date</td>
                            <td>Actions</td>
                        </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach(var cust in @ViewBag.allUsers) {
                                    <tr>
                                        <td>@cust.Name</td>
                                        <td>@cust.CreatedAt</td>
                                        <td>
                                            <form action="delete/@cust.UserId" method="Post">
                                                <input class="ui inverted button red" type="submit" value="Remove">
                                            </form>
                                        </td>                                        
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body> 
</html>