@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Enter Quote</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.0.min.js"></script>
        <style>
            #wrapper {
                padding: 10%;
            }
            button {
                display: inline;
            }
            img {
                width: 20%;
            }
            td {
                padding-top: 4%;
            }
        </style>
    </head>
    <body>
        <div id="wrapper" class="ui container">
            <div class="column">
                <div class="ui inverted segment black">
                    <h1>Welcome to QuotingDojo</h1>
                    <!--Form for submitting information from homepage-->
                        <table>
                            <tr>
                                <td><form action="add" method="Post"><label for="name">Name: </label></td>
                                <td><input id="name" style="color: black;" type="text" name="name" value=""></td>
                            </tr>
                            <hr>
                            <tr>
                                <td><label for="quote">Quote:</label></td>
                                <td><textarea id="quote" style="color: black;" name="quote" rows="5" cols="40"></textarea></td>
                            </tr>
                            <tr>
                                <td><input class="ui inverted red button" type="submit" name="addquote" value="Add my quote!"></td>
                                <td></form><form action="quotes" method="Get"><input class="ui inverted green button" type="submit" name="skip" value="Skip to quotes!"></form></td>
                            </tr>
                        </table>
                </div>
            </div>
        </div>
    </body> 
</html>