@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Bank Activity</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.0.min.js"></script>
        <style>
            #wrapper {
                padding: 10%;
            }
            button {
                display: inline;
            }
            img {
                width: 20%;
            }
            ul {
                list-style: none;
            }
            td {
                padding-left: 2%;
            }
        </style>
    </head>
    <body>
        <div id="wrapper" class="ui container">
            <div class="column">
                <div class="ui inverted segment black">
                    <div style="display: inline;">
                        <h1>@ViewBag.thisEvent.EventName</h1>
                        <a href="http://localhost:5000/events">Dashboard</a>
                    </div>
                    <p style="color: red">@ViewBag.error</p>
                    <hr>
                    <h3>Date: @ViewBag.thisEvent.Date.Date.ToString("MMMM dd, yyyy")</h3>
                    <h4>Guests:</h4>
                    <!--Edit Form-->
                    <form action="reset/@ViewBag.thisEvent.EventId" method="Post">
                            <table>
                                <tr>
                                    <td><label for="eventname">Event Name:</label></td>
                                    <td>@ViewBag.thisEvent.EventName</td>
                                    <td><input style="color: blue;" type="text" id="eventname" name="EventName" value="@ViewBag.thisEvent.EventName"></td>
                                </tr>
                                <tr>
                                    <td><label for="date">Date of Event:</label></td>
                                    <td>@ViewBag.thisEvent.Date.Date.ToString("MMMM dd, yyyy")</td>
                                    <td><input style="color: blue;" type="date" id="date" name="Date" value="@ViewBag.Date"></td>
                                </tr>
                                <tr>
                                    <td><label for="address">Event Address:</label></td>
                                    <td>@ViewBag.thisEvent.Address</td>
                                    <td><input style="color: blue;" type="text" id="address" name="Address" value="@ViewBag.thisEvent.Address"></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><input class="ui inverted button green" type="submit" value="Edit"></td>
                                </tr>
                            </table>
                        </form>                    
                    <!--Logout Button-->
                    <form action="logout" method="Post">
                        <input class="ui inverted button red" type="submit" value="Logout">
                    </form>
                </div>
            </div>
        </div>
    </body> 
</html>